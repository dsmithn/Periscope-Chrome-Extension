{
  "name": "Periscope",
  "version": "1.0",
  "description": "Search one, everywhere.",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["ps_js.js"]
    }
  ]
}

